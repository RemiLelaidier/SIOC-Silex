{% extends "layout.html.twig" %}

{% block content %}
<section class="content-header">

    <h1>
        Comp√©tences
        <small>liste</small>
            <form method="get" action="/new">
                <button type="button" style="float:right;margin:0px;" class="btn bg-orange btn-flat margin"  >
                    Ajouter
                </button>
            </form>

    </h1>
        </section>

    <section class="content">
      <div class="row">
        <div class="col-xs-12">
         <div class="box box-warning">
          <div class="box-header">
            <h3 class="box-title">
                    Voici les competences acquises :  
            </h3>
          </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Reference</th>
                        <th>Libelle</th>
                        <th>Description</th>
                        <th>Obligatoire</th>
                    </tr>
                </thead>
                <tbody>
                    {% for competence in competences %}
                    <tr>
                        <th>{{ competence._id }}</th>
                        <th>{{ competence._reference }}</th>
                        <th>{{ competence._libelle }}</th>
                        <th>{{ competence._description }}</th>
                        {% if competence._obligatoire == TRUE %}
                            <th> X </th>
                        {% else %}
                            <th>   </th>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Numero</th>
                        <th>Reference</th>
                        <th>Libelle</th>
                        <th>Description</th>
                        <th>Obligatoire</th>
                    </tr>
                </tfoot>
            </table>
          </div> <!-- box-body --> 
         </div> <!-- box --> 
        </div> <!-- col --> 
       </div> <!-- row --> 
    </section> <!-- content -->
{% endblock %}