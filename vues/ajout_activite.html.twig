{% extends "layout.html.twig" %}

{% block content %}
    <section class="content-header">
        <h1>
            Formulaire d'ajout
            <small>Activites</small>
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-warning">
                <div class="box-header with-border">
                  <h3 class="box-title">Ajout</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    {#1#}
                  <form role="form" method="POST" action={{ path('activite/') }}> {#2}
                    <!-- text input -->
                    <div class="form-group">    
                      <label>Date de Debut</label>
                      <input type="date" name="reference" class="form-control" placeholder="jj / mm / aa">
                      
                      <label>Duree</label>
                      <input type="text" name="duree" class="form-control" placeholder="jours/semaines/mois/annÃ©es">
                      
                      <label>Libelle</label>
                      <input type="text" name="libelle" class="form-control" placeholder="libelle">
                        
                      <label>Description</label>
                      <input type="text" name="description" class="form-control" placeholder="Description">    
                    </div>
            
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                  </form>
                </div><!-- /.box-body -->
            </div>
        </div>
    </section>
{% endblock %}