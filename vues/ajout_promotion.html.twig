{% extends "layout.html.twig" %}

{% block content %}
    <section class="content-header">
        <h1>
            Formulaire d'ajout
            <small>Promotion</small>
        </h1>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-warning">
                <div class="box-header with-border">
                  <h3 class="box-title">Ajouter une Promotion</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <form role="form" method="POST" action={{ path('promotion') }}>
                    <!-- text input -->
                    <div class="form-group">
                      <label>Annee Scolaire</label>
                      <input type="text" id="annee" name="annee" class="form-control" placeholder="20xx-20xx">
                      
                      <label>Libelle</label>
                      <input type="text" id="libelle" name="libelle" class="form-control" placeholder="Libelle">
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                  </form>
                </div><!-- /.box-body -->
            </div>
        </div>
    </section>
{% endblock %}