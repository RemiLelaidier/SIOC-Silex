<!DOCTYPE html>
<head>

<link rel="stylesheet" href="{{ app.request.basepath }}/bootstrap/css/bootstrap.css">
<link rel="stylesheet" href="{{ app.request.basepath }}/bootstrap/css/bootstrap.min.css">

</head>

{% block content %}
 <body style="width: 5300px;">
  <div style="margin-left:15px; width:5100px; font-size: 15px;">
    <div style="align-content: center;">

        <h1 style="text-align: center;">BTS SERVICES INFORMATIQUES AUX ORGANISATIONS - SESSION _______ - TABLEAU DE COMPETENCES</h1>
         <div>
             <h1><span style="margin-right:1500px;">NOM et Prénom du candidat :</span><Strong><span style="text-align: center;">Parcours SLAM</span></Strong> <span style="float:right; margin-left:1500px;">N° du candidat :</span></h1>
         </div>
    </div>
    <div style="align-content: center;">
        <table border="1">
            <tr>
                <th></th>
                <th colspan="4" style="text-align: center;"> Situations Obligatoires </th>
                <th colspan="50" style="text-align: center"> Competences mises en oeuvre </th>
            </tr>
            <tr>
                <td style="text-align: center;"><strong>Situations professionnelle(intitulé et liste des documents et productions associés)</strong></td>
            {% for competence in competences %}
                <td class="tableau-vertical-th"><div class="tableau-vertical-div">{{ competence.getReference() }}-{{ competence.getLibelle() }}</div></td>
            {% endfor %}
            </tr>
            <tr>
                <th colspan="55"><span style="text-align: center;"><h3><strong>Situations vécues en Formation</strong></h3></span></th>
            </tr>
            {% for activite in activites %}
                <tr>
                        <td><span style="padding: 5px;">{{ activite.getLibelle() }}</span></td>
                    {% for competence in competences %}
                        <td>
                            {% for compAct in activite.getCompetences() %}
                                {% if compAct.getId() == competence.getId() %}
                                    <h1 style="margin-left:30px; color:darkred;">X</h1>
                                {% endif %}
                            {% endfor %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            <tr>
                <th colspan="55"><span style="text-align: center;"><h3><strong> 1er Stage </strong></h3></span></th>
            </tr>
            {% for activite in activites %}
                <tr>
                    <td>{{ activite.getLibelle() }}</td>
                    {% for competence in competences %}
                        <td>
                            {% for compAct in activite.getCompetences() %}
                                {% if compAct.getId() == competence.getId() %}
                                    <h1 style="margin-left:30px; color:darkred;">X</h1>
                                {% endif %}
                            {% endfor %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            <tr>
                <th colspan="55"><span style="text-align: center;"><h3><strong> 2eme Stage </strong></h3></span></th>
            </tr>
            {% for activite in activites %}
                <tr>
                    <td>{{ activite.getLibelle() }}</td>
                    {% for competence in competences %}
                        <td>
                            {% for compAct in activite.getCompetences() %}
                                {% if compAct.getId() == competence.getId() %}
                                    <h1 style="margin-left:30px; color:darkred;">X</h1>
                                {% endif %}
                            {% endfor %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
  </div>
</body>
{% endblock %}